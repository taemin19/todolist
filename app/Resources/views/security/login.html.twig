{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Connexion
{% endblock %}

{% block body_id 'login' %}

{# Don't display header and footer #}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row">
            <div class="form-login">
                <div class="text-center">
                    <a class="navbar-brand" href="{{ path('homepage') }}">
                        <img class="my-4" src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms">
                        To Do List app
                    </a>
                    <h1 class="mb-3">Se connecter</h1>
                    <p class="text-secondary">
                        Pas encore de compte ? <br>
                        <a href="{{ path('user_register') }}">S'inscrire</a>
                    </p>
                </div>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.message }}
                    </div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <div class="form-group text-left">
                        <label for="username">Nom d'utilisateur</label>
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>
                    </div>
                    <div class="form-group text-left">
                        <label for="password">Mot de passe</label>
                        <input class="form-control" type="password" id="password" name="_password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                    <button class="btn btn-success btn-block my-4" type="submit">Connexion</button>
                </form>

                <p class="text-left mt-2">
                    <a class="text-dark" href="{{ path('homepage') }}">Retour<i class="fas fa-long-arrow-alt-left ml-2" aria-hidden="true"></i></a>
                </p>

                <p class="copyright mt-sm-5 mt-2">Copyright &copy; OpenClassrooms</p>
            </div>
        </div>
    </div>
{% endblock %}
