{% extends 'base.html.twig' %}

{% block header_title %}<h1>Créer un compte</h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('user_register')}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success pull-right">Créer votre compte ToDoList</button>
        {{ form_end(form) }}
    </div>
    <div class="row">
        Vous possédez déjà un compte ? <a href="{{ path('login') }}">Identifiez-vous</a>
    </div>
{% endblock %}
