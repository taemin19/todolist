<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}To Do List app{% endblock %}</title>

        {% block stylesheets %}
            <!-- Bootstrap Core CSS -->
            <link href="{{ asset('build/css/app.css') }}" rel="stylesheet">
            <!-- Fonts -->
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        {% endblock %}

        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body id="{% block body_id %}{% endblock %}">

        {% block header %}
            <header>
                <nav class="navbar fixed-top navbar-expand-sm navbar-light" role="navigation">
                    <div class="container">
                        <a class="navbar-brand" href="{{ path('homepage') }}">
                            <img src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms" />
                            To Do List app
                        </a>
                        {% if app.user %}
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle d-sm-block" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-user-circle" aria-hidden="true"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right mt-2" aria-labelledby="navbarDropdownMenuLink">
                                    {% if is_granted("ROLE_ADMIN") %}
                                        <a class="dropdown-item" href="{{ path('admin_user_create') }}">Créer un utilisateur</a>
                                        <a class="dropdown-item" href="{{ path('admin_user_list') }}">Liste des utilisateurs</a>
                                        <div class="dropdown-divider"></div>
                                    {% endif %}
                                    <a class="dropdown-item" href="{{ path('task_create') }}">Créer une tâche</a>
                                    <a class="dropdown-item" href="{{ path('task_list') }}">Liste des tâches à faire</a>
                                    <a class="dropdown-item" href="{{ path('task_done') }}">Liste des tâches terminées</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ path('logout') }}">Se déconnecter</a>
                                </div>
                            </div>
                        {% else %}
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                                <div class="navbar-nav">
                                    <a class="nav-item btn" href="{{ path('login') }}">Connexion</a>
                                    <a class="nav-item btn btn-outline-primary" href="{{ path('user_register') }}">S'inscrire</a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </nav>
            </header>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            <footer class="bg-light m-0 p-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <p class="copyright">Copyright &copy; {{ 'now'|date('Y') }} - OpenClassrooms</p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('build/runtime.js') }}"></script>
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
